---

<header
    class="fixed top-0 z-10 flex items-center justify-center w-full mx-auto mt-2"
>
    <nav
        class="flex px-3 text-sm font-medium rounded-full text-gray-600 dark:text-gray-200 justify-center items-center"
    >
        {
            navItems.map((link) => (
                <a
                    class="relative block px-2 py-2 transition hover:text-yellow-500 dark:hover:text-yellow-400"
                    aria-label={link.label}
                    href={link.url}
                >
                    {link.title}
                </a>
            ))
        }
        <a
            class="w-auto h-7 font-medium flex pr-3 items-center gap-2 dark:text-moonlit hover:text-yellow-500 dark:hover:text-yellow-400 rounded-3xl lg:h-10 cursor-pointer active:scale-[1.1] transition-transform duration-300"
            href={Curriculum}
            target="_blank"
            ><svg
                class="sm:hidden block"
                stroke="currentColor"
                fill="currentColor"
                stroke-width="0"
                viewBox="0 0 24 24"
                height="1em"
                width="1em"
                xmlns="http://www.w3.org/2000/svg"
